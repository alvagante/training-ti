# File managed by Puppet
[main]
cachedir=/var/cache/yum/$basearch/$releasever
keepcache=0
debuglevel=2
logfile=/var/log/yum.log
exactarch=1
obsoletes=1
gpgcheck=1
plugins=1
installonly_limit=5
bugtracker_url=http://bugs.centos.org/set_project.php?project_id=23&ref=http://bugs.centos.org/bug_report_page.php?category=yum
distroverpkg=centos-release
<% if scope.lookupvar('site::proxy_host') != '' -%>
proxy=http://<%= scope.lookupvar('site::proxy_host') %>:<%= scope.lookupvar('site::proxy_port') %>
proxy_username=<%= scope.lookupvar('site::proxy_username') %>
proxy_password=<%= scope.lookupvar('site::proxy_password') %>
<% end -%>

